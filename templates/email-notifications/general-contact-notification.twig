{% extends "_layouts/_email-notifications" %}

{% block content %}

<h2>New submission from your {{ form.name }} form</h2>

<p>Submitted on: {{ dateCreated|date('l, F j, Y \\a\\t g:ia') }}</p>
<ul>
    {% for field in allFields %}
        <li><strong>{{ field.label }}:</strong><br> {{ field.valueAsString }}</li>
    {% endfor %}
</ul>


{# text #}
